<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:outlineAmbientShadowColor="#100000"
    android:outlineSpotShadowColor="#0C0000"
    android:backgroundTint="@color/Navyblue"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:id="@+id/title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="title"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:maxLines="1"
                />
            <ImageButton
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="24dp" android:src="@drawable/baseline_drive_file_rename_outline_24"

                android:backgroundTint="@color/Navyblue"
                android:layout_marginStart="20dp"
                />
            <ImageButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="24dp" android:src="@drawable/baseline_delete_outline_24"
                android:backgroundTint="@color/Navyblue"

                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="content"
            android:maxLines="3"
            android:padding="5dp"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>